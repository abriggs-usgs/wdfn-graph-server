{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "jest/globals": true
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "plugins": ["jest"],
    "rules": {
        "comma-dangle": [2,"never"],
        "linebreak-style": ["error", "unix"],
        "no-console": "off",
        "no-extra-parens": [2,"all"],
        "no-use-before-define": 2,
        "brace-style": [1,"1tbs",{}],
        "no-mixed-spaces-and-tabs": 2,
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
